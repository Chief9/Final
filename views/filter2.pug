	body
		
		h1 I DO NOT want my movie to be or contain:
		div(id="carouselLanding" class="carousel slide" data-ride="carousel")
			div(class="carousel-inner")
				div(class="carousel-item active")
					img(class="d-block w-100 h-100" src="images/bg1.jpg" alt="First slide")
				div(class="carousel-item")
					img(class="d-block w-100 h-100" src="images/bg2.jpg" alt="3d slide")
				div(class="carousel-item")
					img(class="d-block w-100 h-100" src="images/bg3.jpg" alt="4th slide")
		div(class="poster formmover")
			- for (var i = 0; i < Data.length; i++) 
				img(id= `${Data[i].id}` src='http://image.tmdb.org/t/p/w185//' + Data[i].poster_path)

			

		form(class="form-group" method="POST" action="PostLeft")
			button(type= "submit" class="btn btn-light formmover leftB" id = "leftB" value="submit") #{leftButton}
			input(type='hidden' name= 'leftB' value=`${leftButton}`)
			

		form(class="form-group" method="POST" action="PostRight")
			input(type='hidden' name= 'rightB' value=`${rightButton}`)
			button(type="submit" class="btn btn-light formmover rigtB" id= "rightB" value="submit") #{rightButton}			
