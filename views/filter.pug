			- for (var i = 0; i < all.length; i++) 
				img(id= `${all[i].id}` src='http://image.tmdb.org/t/p/w185//' + all[i].poster_path)

			

		- var x = 0
		- var y = 1
			
		button(type= 'button' class="btn btn-light formmover leftB" id = "leftB" data-word = `'${sortable[0]}'` data-all = `${all}` data-commentsID =`${commentsID}`) #{sortable[0].splice(0,1)}	

		button(type="button" class="btn btn-light formmover rigtB") #{sortable[1].splice(0,1)}			
		script.
			$(document).ready(function() {
				$('#leftB').click(function(e){
					console.log(e)
					console.log(this)
					var commentsID = this.dataset.commentsID // link between ID and review
					this.dataset.all //array of all movies
					var dataset = this.dataset.word //word to search for
					console.log(commentsID)

					var re = new RegExp(dataset)
					for( i = 0; i< commentsID.length; i++ ){
						if(!(commentsID[i][0].match(re))) {
						$(`"#${commentsID[i][1]}"`).css("display","none")
						console.log(re)	
						}

					}

				}) 
			})